<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/linec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        android:visibility="visible">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="6dp"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:maxLines="3"
                    android:lineSpacingExtra="2dp"
                    android:text="@string/app_name_with_login"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="visible" />


                <EditText
                    android:id="@+id/edt_string"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/child_back_ground"
                    android:ellipsize="end"
                    android:focusable="true"
                    android:gravity="start"
                    android:inputType="none"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_dropdown"
                    tools:ignore="UselessParent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/child_back_ground"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:visibility="visible">

                    <Spinner
                        android:id="@+id/spr_dropdown"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/sourcesanspro_regular"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/edit"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_back_arrow"
                        android:visibility="gone" />

                </LinearLayout>

                <EditText
                    android:id="@+id/edt_comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/child_back_ground"
                    android:ellipsize="end"
                    android:focusable="true"
                    android:gravity="start"
                    android:inputType="none"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_remarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:maxLines="3"
                    android:text="@string/remarks"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="visible" />


                <EditText
                    android:id="@+id/edt_remarks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/child_back_ground"
                    android:ellipsize="end"
                    android:focusable="true"
                    android:gravity="start"
                    android:inputType="none"
                    android:maxLines="5"
                    android:padding="10dp"
                    android:visibility="visible" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="6dp"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_field_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:maxLines="3"
                    android:text="@string/remarks"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="visible" />


                <EditText
                    android:id="@+id/edt_datetime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/child_back_ground"
                    android:ellipsize="end"
                    android:focusable="true"
                    android:gravity="start"
                    android:inputType="none"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:visibility="visible" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</RelativeLayout>