<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/s_no"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/rectangle_border_square"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="1"
                android:textAlignment="center"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/employee_id"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/rectangle_border_square"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textCapCharacters"
                android:padding="5dp"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/route_code"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/rectangle_border_square"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textCapCharacters"
                android:padding="5dp"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5">

            <EditText
                android:id="@+id/employee_name"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/rectangle_border_square"
                android:clickable="false"
                android:cursorVisible="false"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textCapCharacters"
                android:padding="5dp"
                android:singleLine="true"
                android:textSize="15dp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/rectangle_border_square">

            <TextView
                android:id="@+id/attendance_menu"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/ivDown"
                android:gravity="center"
                android:text="Select"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/ivDown"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/down1"
                android:visibility="visible" />

            <Spinner
                android:id="@+id/spinner_status"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/spinner_background"
                android:textSize="15dp"
                android:visibility="gone" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="3.5"
            android:background="@drawable/rectangle_border_square"
            android:gravity="center">

            <Button
                android:id="@+id/btn_add_remark"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="#213e9a"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:text="Add Remark"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:theme="@style/Button1Style" />

            <Button
                android:id="@+id/btn_edit_remark"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="#213e9a"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:text="Edit"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:theme="@style/Button1Style"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_delete_remark"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="#213e9a"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:text="Delete"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:theme="@style/Button1Style"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>